  "backend": [
    {
      "host": ["https://{{ .settings.account_service_url }}"],
      "url_pattern": "/docs",
      {{ template "account_tls.tmpl" . }}
    }
  ]
},
{
  "endpoint": "/v1/account/openapi.json",
  "method": "GET",
  "output_encoding": "no-op",
  "backend": [
    {
      "host": ["https://{{ .settings.account_service_url }}"],
      "url_pattern": "/openapi.json",
      {{ template "account_tls.tmpl" . }}
    }
  ]
}