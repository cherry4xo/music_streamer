{
    "endpoint": "/v1/account/me",
    "method": "GET",
    "extra_config": {
        "auth/validator": {
            "roles": [
                "user"
            ]
        }
    },
    "backend": [
        {
            "host": [
                "https://{{ .settings.account_service_url }}"
            ],
            "url_pattern": "/me",
            {{ template "account_tls.tmpl" . }}
        }
    ]
},
{
    "endpoint": "/v1/account/me/username",
    "method": "POST",
    "extra_config": {
        "auth/validator": {
            "roles": [
                "user"
            ]
        }
    },
    "backend": [
        {
            "host": [
                "https://{{ .settings.account_service_url }}"
            ],
            "url_pattern": "/me/username",
            {{ template "account_tls.tmpl" . }}
        }
    ]
},
{
  "endpoint": "/v1/account/docs",
